<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@integer/pref_default_airspeed"
        android:inputType="numberDecimal"
        android:key="canopy_airspeed"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_canopy_airspeed" />

    <EditTextPreference
        android:defaultValue="@integer/pref_default_glide_ratio"
        android:inputType="numberDecimal"
        android:key="canopy_glide_ratio"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_canopy_glide_ratio" />

</PreferenceScreen>
