<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@integer/pref_default_downwind_altitude"
        android:inputType="number"
        android:key="landing_pattern_downwind_altitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_landing_pattern_downwind_altitude" />

    <EditTextPreference
        android:defaultValue="@integer/pref_default_crosswind_altitude"
        android:inputType="number"
        android:key="landing_pattern_crosswind_altitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_landing_pattern_crosswind_altitude" />

    <EditTextPreference
        android:defaultValue="@integer/pref_default_upwind_altitude"
        android:inputType="number"
        android:key="landing_pattern_upwind_altitude"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_landing_pattern_upwind_altitude" />

</PreferenceScreen>
